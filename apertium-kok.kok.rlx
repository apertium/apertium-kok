#SELECT N_Sg IF (0 N_Sg) (0 N_Pl) (-1 Adj_Sg) ;
#SELECT N_Sg IF (0 N_Sg) (0 N_Pl) (1 Vblex_Sg) ;
#SELECT N_Pl IF (0 N_Sg) (0 N_Pl) (2 Vblex_Pl) ;
#SELECT N_Pl IF (0 N_Sg) (0 N_Pl) (1 Vblex_Pl) ;

